<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="5dp"
        android:top="5dp">
        <selector>
            <item android:state_pressed="true">
                <shape>
                    <solid android:color="@color/colorDisableView" />
                    <corners android:radius="100dp" />
                    <padding
                        android:bottom="16dp"
                        android:left="20dp"
                        android:right="20dp"
                        android:top="16dp" />
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="@android:color/white" />
                    <corners android:radius="100dp" />
                    <padding
                        android:bottom="16dp"
                        android:left="20dp"
                        android:right="20dp"
                        android:top="16dp" />
                </shape>
            </item>
        </selector>
    </item>
</layer-list>
