<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <corners android:radius="10dp" />
            <stroke
                android:width="3dp"
                android:color="@color/colorPrimary" />
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape>
            <corners android:radius="10dp" />
            <solid android:color="@android:color/white" />
        </shape>

    </item>
    <item
        android:left="30dp"
        android:right="30dp">
        <shape>
            <solid android:color="@android:color/white" />
        </shape>
    </item>
    <item
        android:bottom="30dp"
        android:top="30dp">
        <shape>
            <solid android:color="@android:color/white" />
        </shape>
    </item>
    <item android:top="20dp"
        android:bottom="20dp"
        android:left="20dp"
        android:right="20dp">
        <shape>
            <corners android:radius="5dp"/>
            <solid android:color="@color/background"/>
        </shape>
    </item>
</layer-list>