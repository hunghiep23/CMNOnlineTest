<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="5dp"
        android:top="5dp">
        <selector>
            <item android:state_pressed="true">
                <shape>
                    <solid android:color="@color/colorOrange" />
                    <corners android:radius="5dp" />
                    <padding
                        android:bottom="18dp"
                        android:left="20dp"
                        android:right="20dp"
                        android:top="18dp" />
                </shape>
            </item>
            <item>
                <shape>
                    <gradient
                        android:angle="180"
                        android:endColor="@color/colorOrangeLight"
                        android:startColor="@color/colorOrange" />
                    <corners android:radius="5dp" />
                    <padding
                        android:bottom="18dp"
                        android:left="20dp"
                        android:right="20dp"
                        android:top="18dp" />
                </shape>
            </item>
        </selector>
    </item>
</layer-list>
